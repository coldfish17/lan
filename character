/*
*This program takes a single english character as input and outputs its pattern representation
*/
#include<stdio.h>
int main(){
    char input;
    printf("Please enter a character:");
    scanf("%c",&input);

    switch(input){
      case'e':
         printf("*** *\n** *\n");
         break;
      case'a':
         printf("*\n**\n");

         break;
      case'b':
         printf("**\n");
         break;
     }
    return 0;
}

